<p id="notice"><%= notice %></p>

<div class="event-block">
	<div class="event-heading">
		<h1> <%= link_to @event.user.username, profile_path(@event.user) %> </h1>
	</div>
	<div class="event-body">
		<div class="event-image">
			<%= image_tag @event.image(:medium) %>
		</div>
		<p><%= @event.created_at.strftime("%A, %B %d") %></p>
		<h3><%= @event.message %></h3>
		<%= render "shared/likes" %>
	</div>
</div>
	




<br><br>
<% if current_user.id == @event.user_id %>
<%= link_to "Edit this event", edit_event_path(@event), class: "button btn btn-primary btn-xs" %> |
<%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: "button btn btn-primary btn-xs" %>
<% end %>
