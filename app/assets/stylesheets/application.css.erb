.navbar-inverse .navbar-nav>li>a {
	color: #18d0f4;
	font-size: 16px;
	margin: 5px 5px 0 10px;
}

.navbar>.container .navbar-brand, .navbar>.container-fluid .navbar-brand {
	margin: 15px 10px 0 10px;
}

.btn-danger {
	background-color: #18d0f4;
	border-color: #000;
	border-width: 1.5px;
	margin-top: 15px;
	color: #000;
	font-weight: 50%;
}

.btn-danger:hover {
	background-color: #18d0f4;
	border-color: #000;
}

body {
	padding: 65px 10px;
	/*background-color: #59656F;*/
	background-image: url(<%= asset_path 'skyline.png' %>);
	background-size: 100%;
	background-attachment: fixed;
	background-repeat: no-repeat;
	background-position: center;
}

a {
	color: #000000;
}

a:hover {
	text-decoration: none;
	color: #000;
}

.header h1 {
	padding-top: 40px;
	text-align: center;
}

.header h4 {
	text-align: center;
	padding-bottom: 150px;
}

.allblocks {
	margin: auto;
	width: 98%;
}

.panel-body, .event-body {
	padding: 0 0 0 0;
	text-align: center;
}

.panel-heading, .event-heading {
	text-align: center;
	background-color: rgba(71, 93, 142, 0.50);
	margin-bottom: 10px;
}

.panel-block {
	/*position: absolute;*/
	background-color: rgba(71, 93, 142, 0.65);
	min-width: 250px;
	width: 30%;
	margin: 1.5%;
	display: inline-block;
	vertical-align: top;
}

.panel-block .h5 {
	vertical-align: bottom;
}

.panel-image {
	width: 200px;
	margin: auto;
}

.event-block {
	background-color: rgba(71, 93, 142, 0.65);
	width: 40%;
	min-width: 375px;
	margin: 40px 0 0 40px;
}


.event-heading {
	height: 75px;
	padding: 5px 15px;
}

.profile-heading {
	/*width: 45%;*/
	text-align: center;
	margin: 20px auto;
}

.profile-info {
	width: 45%;
	margin: 20px 0;
}


.container-fluid {
	background-color: #475D8E;

}

.navbar .navbar-brand {
	background-image: url(<%= asset_path 'logo.png' %>);
	background-repeat: no-repeat;
	width: 200px;
	float: left;
	margin: 10px 0 0 0;
	text-indent: -9999px;
}

.grid {
	display: inline-block;
	margin: 20px;
	margin-right: 20px;
}

.grid h4 {
	text-align: center;
}
